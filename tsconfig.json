{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["./scripts", "./test", "./src"],
  "files": [
    "./hardhat.config.ts"
  ]
}
